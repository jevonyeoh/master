<!DOCTYPE html>
<html>
<head>
  <title>Plusdollar</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
   <%= yield %>
</div>

<% if alert %>
	<div class="alert alert-error">
		<%= alert %>
	</div>
<% end %>

<% if notice %>
	<div class="notice notice-error">
		<%= notice %>
	</div>
<% end %>

</body>
</html>
