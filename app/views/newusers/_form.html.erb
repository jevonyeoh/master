<%= form_for(@newuser, html: {class: "form-horizontal"}) do |f| %>
  <% if @newuser.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@newuser.errors.count, "error") %> prohibited this newuser from being saved:</h2>

      <ul>
      <% @newuser.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<br />

  <div class="control-group">
    <%= f.label :name, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label "Graduating Year", class: 'control-label' %>
    <div class="controls">
    	<%= f.text_field :year  %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :email, class: 'control-label' %>
    <div class="controls">
    	<%= f.text_field :email %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :gender, class: 'control-label' %>
    <div class="controls">
    	<%= f.collection_select :gender, Sex.all, :gender, :gender  %>
    	<%= link_to "Other", new_sex_path, class: "btn btn-primary" %>
    </div>    	
  </div>
  
  <div class="control-group">
    <%= f.label :major, class: 'control-label' %>
    <div class="controls">
      	<%= f.text_field :major %>
    </div>
  </div>
  
  <div class="form-actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
